
@page "/studentoverview"

@if (students == null || students.Count == 0)
{
    <div class="text-center">
        <p><em>No students available.</em></p>
    </div>
}
else
{

    <div class="card shadow-lg p-4">
        <div class="row">
            <div class="col-md-6 mx-auto text-center">
                <h2 class="text-success">
                    Total Students: <span class="badge bg-primary">@count</span>
                </h2>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <h2 class="text-center text-primary mb-4">Student Overview</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered shadow-sm rounded">
                <thead class="table-dark">
                    <tr>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Marks</th>
                        <th>Remove Student</th>
                        <th>Update Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in students)
                    {
                        <tr class="align-middle">
                            <td>@student.Id</td>
                            <td>@student.Name</td>
                            <td>@student.Age</td>
                            <td>
                                <a href="@($"studentmarksbystubject/{student.Id}")" class="btn btn-outline-primary btn-sm">
                                    View Marks
                                </a>
                            </td>
                            <td>
                                <RemoveButton student="student"></RemoveButton>
                            </td
                            <td>
                                <UpdateButton student="student"></UpdateButton>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
